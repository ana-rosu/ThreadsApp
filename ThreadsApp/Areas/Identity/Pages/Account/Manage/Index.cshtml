@page
@using ThreadsApp.Models
@using ThreadsApp.Controllers
@using Microsoft.AspNetCore.Mvc.Rendering
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.FirstName" class="form-control" />
                <label asp-for="Input.FirstName" class="form-label"></label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.LastName" class="form-control" />
                <label asp-for="Input.LastName" class="form-label"></label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.Bio" class="form-control" />
                <label asp-for="Input.Bio" class="form-label"></label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.Image" type="file" class="form-control" />
                <label asp-for="Input.Image" class="form-label"></label>
            </div>
            <div class="form-floating mb-2">
                <select asp-for="Input.AccountPrivacy" asp-items="@ApplicationUser.PrivacyOptions" class="form-control"></select>
                <label asp-for="Input.AccountPrivacy" class="form-label"></label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-dark">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
