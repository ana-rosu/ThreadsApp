@model ThreadsApp.Models.Post


<h2 class="text-center mt-5">New Post</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "New", controllerName: "Posts", method: FormMethod.Post))
            {

                <br />
                @Html.Label("Content", "Content")
                <br />
                @Html.TextArea("Content", null, new { @class = "form-control" })
                @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
                <br />


                <br />
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <br />

                <button class="btn btn-dark" type="submit">Add post</button>
            }
        </div>
    </div>
</div>








