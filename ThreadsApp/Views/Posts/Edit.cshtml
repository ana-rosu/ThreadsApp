@model ThreadsApp.Models.Post

<h2 class="text-center mt-5">Edit Post</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            @using (Html.BeginForm("Edit", "Posts", new { id = Model.Id }, FormMethod.Post, null, new { enctype = "multipart/form-data" }))
            {

                @Html.Label("Content", "Post Content")
                <br />
                @Html.TextArea("Content", Model.Content, new { @class = "form-control"})

                @Html.ValidationMessageFor(m => m.Content, null, new { @class = "text-danger"})
                <br />
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <br />
                <br />

                <button class="btn btn-outline-dark" type="submit">Edit post</button>
            }
        </div>
    </div>
</div>




