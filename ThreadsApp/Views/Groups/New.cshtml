@model ThreadsApp.Models.Group
@{
    ViewBag.PageTitle = "Create a new group";
}
<h2 class="text-center mt-5">@ViewBag.PageTitle</h2>
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "New", controllerName: "Groups", method: FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.Label("Title", "Group name");
            <br />
            @Html.TextBox("Title", null, new { @class = "form-control mt-2"})
            ;
            @Html.ValidationMessage("Title", null, new { @class = "text-danger" });
            <br />
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button class="btn btn-dark btn-outline-light border border-dark mt-2" type="submit">Create</button>
        }
        </div>
    </div>
</div>