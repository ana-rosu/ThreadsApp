@model dynamic
<div class="card-body">
     
    <div class="d-flex justify-content-between flex-row">
       
        <div><i class="bi bi-person"></i>@Model.Post.User.UserName</div>
        <div class="d-flex align-items-center">
        @if (Model.IsAdmin || Model.Post.UserId == Model.UserCurent)
        {

            <a class="btn" href="/Posts/Edit/@Model.Post.Id"><i class="bi bi-pencil"></i></a>

            <form method="post" action="/Posts/Delete/@Model.Post.Id">

                <button type="submit" class="btn"><i class="bi bi-trash"></i></button>
            
            </form>
            
        }
        </div>
    </div>

    <hr class="hr" />
    
    <p class="card-text">@Model.Post.Content</p>

    <div class="d-flex justify-content-between flex-row">
    
        <div class="d-flex align-items-center">
           
            <span>@Model.Post.LikesCount</span>
            <form method="post" asp-action="Like" asp-route-postId="@Model.Post.Id" asp-route-currentPage="@ViewBag.currentPage" >
                @if (ViewData[$"UserLiked_{Model.Post.Id}"] as bool? ?? false == true)
                {
                    <button type="submit" class="btn">
                        <i class="bi bi-heart-fill" style="color:red;"></i>
                    </button>

                    <input type="hidden" />
                }
                else
                {
                    <button type="submit" class="btn">
                        <i class="bi bi-heart"></i>
                    </button>
                }
            </form>
        
         </div>

        <span>@Model.Post.FormattedDate</span>
    
    </div>

</div>