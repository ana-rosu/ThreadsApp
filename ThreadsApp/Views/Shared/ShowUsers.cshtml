@model List<ApplicationUser>

@foreach (ThreadsApp.Models.ApplicationUser user in Model)
{
    <a href="/Users/ShowProfile/@user.Id" class="link-dark text-decoration-none">
        <div class="card mx-auto" style="width: 50rem;">
            <div class="card-body">
                <div class="d-flex flex-row gap-2">
                    @if (user.ProfilePicture != null)
                    {
                        <img src="@user.ProfilePicture" alt="Profile Picture" width="70" class="rounded mb-2 mr-2 img-thumbnail" />
                    }
                    else
                    {
                        <img src="/images/profile/default.png" alt="Profile Picture" width="70" class="rounded mb-2 mr-2 img-thumbnail" />
                    }
                <div class="d-inline">
                    <h5 class="mt-0 mb-0">@user.UserName</h5>
                    <small>@user.AccountPrivacy</small>
                </div>

                </div>

            </div>
        </div>
    </a>

    <br />
}