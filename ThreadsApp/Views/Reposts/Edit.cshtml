@model ThreadsApp.Models.Repost


<h2 class="text-center mt-5">Edit Repost</h2>

<br />


<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(controllerName: "Reposts", actionName: "Edit",
                method: FormMethod.Post, routeValues: new { id = Model.Id, page = ViewBag.Page }))

            {
                @Html.Label("Content", "Content")

                <br />

                @Html.Editor("Content", new { @class = "form-control" })
                <br />

                @Html.ValidationMessage("Content", null, new { @class = "text-danger" })

                <br />
                <br />

                <button class="btn btn-outline-dark" type="submit">Edit</button>

            }
        </div>
    </div>
</div>

